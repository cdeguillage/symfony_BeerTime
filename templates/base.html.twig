<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BeerTime !!!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('assets/img/favicon.ico') }}"/>
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block nav %}
            {# NAVBAR #}
            <nav class="navbar navbar-expand-lg navbar-warning bg-warning">
                <a class="navbar-brand" href="{{ path('home') }}">
                    <h1 class="beertime-title">BeerTime !!!</h1>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link" href="{{ path('list') }}">Liste des événements</a>
                        <a class="nav-item nav-link" href="{{ path('create') }}">Créer un événement</a>
                    </div>
                </div>
                <form method="GET" action="{{ path('list') }}" class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Evénement, ..." name="querySearch">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Chercher</button>
                </form>
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                {# S'inscrire #}
                <a class="btn btn-outline-success bg-success text-warning my-2 my-sm-0" href="{{ path('inscribe') }}">S'inscrire</a>
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                {# Se connecter #}
                <a class="btn btn-outline-success bg-success text-warning my-2 my-sm-0" href="{{ path('connect') }}">Se connecter</a>
            </nav>
        {% endblock %}

        <div class="container">
            <div class="row">
                <div class="col-1">
                    <img src="{{ asset('assets/img/background.jpg') }}" class="beer-lego" alt="BeerTime"></img>
                </div>
                <div class="col-11">
                    {% block displayArray %} {% endblock %}
                </div>
        </div>

        {% block body %}{% endblock %}

        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
